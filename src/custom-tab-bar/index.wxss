.tab-bar {
  z-index: 20;
  display: flex;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 98rpx;
  background: white;
  box-shadow: 0 -3rpx 12rpx 0 rgba(0, 0, 0, 0.07);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-wrapper {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.tab-bar-icon {
  width: 40rpx;
  height: 40rpx;
}

.tab-bar-wrapper .tab-bar-label {
  margin-top: 10rpx;
  font-size: 22rpx;
  line-height: 1;
}
